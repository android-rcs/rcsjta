<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

	<PreferenceCategory android:title="@string/rcs_settings_title_presence_invitation">
		<CheckBoxPreference
			android:key="presence_invitation_vibration"
			android:showDefault="true"
			android:title="@string/rcs_settings_label_vibrate"
			android:summary="@string/rcs_settings_summary_presence_vibrate"
		/>

		<com.orangelabs.rcs.settings.PresenceInvitationRingtone
			android:key="presence_invitation_ringtone"
			android:title="@string/rcs_settings_label_ringtone"
			android:showDefault="true"
			android:showSilent="true"
			android:summary="@string/rcs_settings_summary_presence_ringtone"
		/>
	</PreferenceCategory>
	
	<PreferenceCategory android:title="@string/rcs_settings_title_freetexts">
		<EditTextPreference
            android:key="edit_freetext1"
            android:summary="@string/rcs_settings_summary_edit_freetext"
            android:dialogTitle="@string/rcs_settings_title_edit_freetext"
	    	android:maxLength="100"/>
                	
		<EditTextPreference
            android:key="edit_freetext2"
            android:summary="@string/rcs_settings_summary_edit_freetext"
            android:dialogTitle="@string/rcs_settings_title_edit_freetext" 
    	    android:maxLength="100"/>

		<EditTextPreference
            android:key="edit_freetext3"
            android:summary="@string/rcs_settings_summary_edit_freetext"
            android:dialogTitle="@string/rcs_settings_title_edit_freetext" 
    	    android:maxLength="100"/>

		<EditTextPreference
            android:key="edit_freetext4"
            android:summary="@string/rcs_settings_summary_edit_freetext"
            android:dialogTitle="@string/rcs_settings_title_edit_freetext" 
    	    android:maxLength="100"/>
	</PreferenceCategory>

</PreferenceScreen>
